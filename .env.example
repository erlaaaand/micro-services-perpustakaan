# =========================================
# ENVIRONMENT CONFIGURATION
# =========================================
ENVIRONMENT=dev
BUILD_VERSION=latest

# =========================================
# RABBITMQ CONFIGURATION
# =========================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# =========================================
# EUREKA CONFIGURATION
# =========================================
EUREKA_SERVER_URL=http://eureka-server:8761/eureka/

# =========================================
# ZIPKIN CONFIGURATION
# =========================================
ZIPKIN_URL=http://zipkin:9411/api/v2/spans

# =========================================
# ELASTICSEARCH CONFIGURATION
# =========================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ES_JAVA_OPTS=-Xms1g -Xmx1g

# =========================================
# LOGSTASH CONFIGURATION
# =========================================
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000
LS_JAVA_OPTS=-Xmx512m -Xms512m

# =========================================
# KIBANA CONFIGURATION
# =========================================
KIBANA_HOST=kibana
KIBANA_PORT=5601

# =========================================
# PROMETHEUS CONFIGURATION
# =========================================
PROMETHEUS_PORT=9090

# =========================================
# GRAFANA CONFIGURATION
# =========================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =========================================
# ALERTMANAGER CONFIGURATION
# =========================================
ALERTMANAGER_PORT=9093

# =========================================
# JAVA OPTIONS
# =========================================
JAVA_OPTS_GATEWAY=-Xmx512m -Xms256m
JAVA_OPTS_SERVICE=-Xmx512m -Xms256m

# =========================================
# NETWORK CONFIGURATION
# =========================================
NETWORK_SUBNET=172.25.0.0/16

# =========================================
# LOG LEVELS
# =========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=INFO

# =========================================
# MONITORING RETENTION
# =========================================
PROMETHEUS_RETENTION=15d
ELASTICSEARCH_INDEX_RETENTION=7d

# =========================================
# FEATURE FLAGS
# =========================================
FEATURE_TRACING_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_LOGGING_ENABLED=true
FEATURE_SECURITY_ENABLED=false

# =========================================
# HEALTH CHECK CONFIGURATION
# =========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60s

# =========================================
# RATE LIMITING
# =========================================
RATE_LIMIT_API=10
RATE_LIMIT_MONITORING=5

# =========================================
# API DOCUMENTATION
# =========================================
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=http://localhost:8080

# =========================================
# CORS CONFIGURATION
# =========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# =========================================
# ALERTMANAGER CONFIGURATION
# =========================================
ALERTMANAGER_PORT=9093

# SMTP (EMAIL ALERT)
SMTP_SMARTHOST=smtp.gmail.com:587
SMTP_FROM=youremail
SMTP_USERNAME=youremail
SMTP_PASSWORD=yourpassword