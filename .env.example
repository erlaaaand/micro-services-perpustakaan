# =========================================
# ENVIRONMENT CONFIGURATION
# =========================================
ENVIRONMENT=dev

# =========================================
# RABBITMQ CONFIGURATION
# =========================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# =========================================
# EUREKA CONFIGURATION
# =========================================
EUREKA_SERVER_URL=http://eureka-server:8761/eureka/

# =========================================
# ZIPKIN CONFIGURATION
# =========================================
ZIPKIN_URL=http://zipkin:9411/api/v2/spans

# =========================================
# ELASTICSEARCH CONFIGURATION
# =========================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ES_JAVA_OPTS=-Xms1g -Xmx1g

# =========================================
# LOGSTASH CONFIGURATION
# =========================================
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000
LS_JAVA_OPTS=-Xmx512m -Xms512m

# =========================================
# KIBANA CONFIGURATION
# =========================================
KIBANA_HOST=kibana
KIBANA_PORT=5601

# =========================================
# PROMETHEUS CONFIGURATION
# =========================================
PROMETHEUS_PORT=9090

# =========================================
# GRAFANA CONFIGURATION
# =========================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =========================================
# ALERTMANAGER CONFIGURATION
# =========================================
ALERTMANAGER_PORT=9093

# =========================================
# JAVA OPTIONS
# =========================================
JAVA_OPTS_GATEWAY=-Xmx512m -Xms256m
JAVA_OPTS_SERVICE=-Xmx512m -Xms256m

# =========================================
# DOCKER REGISTRY (For Production)
# =========================================
DOCKER_REGISTRY_URL=registry.yourdomain.com
DOCKER_REGISTRY_USERNAME=user
DOCKER_REGISTRY_PASSWORD=password

# =========================================
# JENKINS CONFIGURATION
# =========================================
JENKINS_URL=http://jenkins:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-token

# =========================================
# SONARQUBE CONFIGURATION
# =========================================
SONAR_HOST_URL=http://sonarqube:9000
SONAR_LOGIN=your-sonar-token

# =========================================
# EMAIL NOTIFICATION (For Alertmanager)
# =========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@perpustakaan.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=team@perpustakaan.com

# =========================================
# SLACK NOTIFICATION
# =========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#devops-alerts

# =========================================
# SSL CERTIFICATES (For Production)
# =========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =========================================
# NETWORK CONFIGURATION
# =========================================
NETWORK_SUBNET=172.25.0.0/16

# =========================================
# LOG LEVELS
# =========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=INFO

# =========================================
# DATABASE CONFIGURATION (If using external DB)
# =========================================
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=perpustakaan
# POSTGRES_USER=perpustakaan_user
# POSTGRES_PASSWORD=secure_password

# MYSQL_HOST=mysql
# MYSQL_PORT=3306
# MYSQL_DATABASE=perpustakaan
# MYSQL_USER=perpustakaan_user
# MYSQL_PASSWORD=secure_password

# =========================================
# MONITORING RETENTION
# =========================================
PROMETHEUS_RETENTION=15d
ELASTICSEARCH_INDEX_RETENTION=7d

# =========================================
# RATE LIMITING
# =========================================
RATE_LIMIT_API=10
RATE_LIMIT_MONITORING=5

# =========================================
# SECURITY
# =========================================
# JWT_SECRET=your-jwt-secret-key-min-32-characters
# ENCRYPTION_KEY=your-encryption-key-min-32-chars

# =========================================
# FEATURE FLAGS
# =========================================
FEATURE_TRACING_ENABLED=true
FEATURE_METRICS_ENABLED=true
FEATURE_LOGGING_ENABLED=true
FEATURE_SECURITY_ENABLED=false

# =========================================
# BACKUP CONFIGURATION
# =========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=perpustakaan-backups

# =========================================
# CACHE CONFIGURATION
# =========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# =========================================
# API DOCUMENTATION
# =========================================
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=http://localhost:8080

# =========================================
# CORS CONFIGURATION
# =========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# =========================================
# HEALTH CHECK CONFIGURATION
# =========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60s