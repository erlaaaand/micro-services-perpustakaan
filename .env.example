# =========================================
# ENVIRONMENT CONFIGURATION
# =========================================
ENVIRONMENT=dev
BUILD_VERSION=latest

# =========================================
# EUREKA CONFIGURATION (Service Discovery)
# =========================================
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# =========================================
# ELK STACK CONFIGURATION (Logging)
# =========================================
# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Logstash
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000
LS_JAVA_OPTS=-Xmx256m -Xms256m

# Kibana
KIBANA_HOST=kibana
KIBANA_PORT=5601

# =========================================
# JAVA OPTIONS (Memory Limits)
# =========================================
JAVA_OPTS_GATEWAY=-Xmx512m -Xms256m
JAVA_OPTS_SERVICE=-Xmx512m -Xms256m

# =========================================
# NETWORK CONFIGURATION
# =========================================
NETWORK_SUBNET=172.25.0.0/16

# =========================================
# LOG LEVELS
# =========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=INFO

# =========================================
# DATA RETENTION
# =========================================
ELASTICSEARCH_INDEX_RETENTION=7d

# =========================================
# FEATURE FLAGS
# =========================================
FEATURE_LOGGING_ENABLED=true
FEATURE_SECURITY_ENABLED=false

# =========================================
# HEALTH CHECK CONFIGURATION
# =========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60s

# =========================================
# API DOCUMENTATION
# =========================================
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=http://localhost:8080

# =========================================
# CORS CONFIGURATION
# =========================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*