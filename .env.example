# =========================================
# ENVIRONMENT CONFIGURATION
# =========================================
ENVIRONMENT=dev
BUILD_VERSION=latest

# =========================================
# DATABASE CONFIGURATION
# =========================================
# Format: mongodb://<nama-service-docker>:<port>/<nama-database>
# Service Anggota
MONGODB_URI_ANGGOTA=mongodb://mongodb:27017/anggota_db
# Service Buku
MONGODB_URI_BUKU=mongodb://mongodb:27017/buku_db
# Service Peminjaman
MONGODB_URI_PEMINJAMAN=mongodb://mongodb:27017/peminjaman_db
# Service Pengembalian
MONGODB_URI_PENGEMBALIAN=mongodb://mongodb:27017/pengembalian_db

# =========================================
# EUREKA CONFIGURATION
# =========================================
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# =========================================
# ELK STACK CONFIGURATION
# =========================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ES_JAVA_OPTS=-Xms512m -Xmx512m

LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000
LS_JAVA_OPTS=-Xmx256m -Xms256m

KIBANA_HOST=kibana
KIBANA_PORT=5601

# =========================================
# JAVA OPTIONS
# =========================================
JAVA_OPTS_GATEWAY=-Xmx512m -Xms256m
JAVA_OPTS_SERVICE=-Xmx512m -Xms256m

# =========================================
# NETWORK CONFIGURATION
# =========================================
NETWORK_SUBNET=172.25.0.0/16

# =========================================
# LOG LEVELS & OTHERS
# =========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
ELASTICSEARCH_INDEX_RETENTION=7d
FEATURE_LOGGING_ENABLED=true
FEATURE_SECURITY_ENABLED=false
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60s
SWAGGER_ENABLED=true
SWAGGER_SERVER_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# =========================================
# RABBITMQ CONFIGURATION
# =========================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest