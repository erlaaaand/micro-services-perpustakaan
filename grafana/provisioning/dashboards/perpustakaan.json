{
  "dashboard": {
    "title": "Perpustakaan Microservices Overview",
    "tags": ["microservices", "spring-boot", "perpustakaan"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "up{job=~\"eureka-server|api-gateway|microservices\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "value": 0, "text": "Down", "color": "red" },
              { "value": 1, "text": "Up", "color": "green" }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": { "x": 6, "y": 0, "w": 9, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "legendFormat": "{{application}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": { "x": 15, "y": 0, "w": 9, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])) by (application) / sum(rate(http_server_requests_seconds_count[5m])) by (application) * 100",
            "legendFormat": "{{application}}"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [5], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Response Time (95th Percentile)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, application))",
            "legendFormat": "{{application}}"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Response Time" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "JVM Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"} * 100",
            "legendFormat": "{{application}} - Heap"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Memory Usage" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "process_cpu_usage * 100",
            "legendFormat": "{{application}}"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "CPU Usage" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Thread Count",
        "type": "graph",
        "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "jvm_threads_live_threads",
            "legendFormat": "{{application}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "hikaricp_connections_active",
            "legendFormat": "{{application}} - Active"
          },
          {
            "expr": "hikaricp_connections_idle",
            "legendFormat": "{{application}} - Idle"
          }
        ]
      },
      {
        "id": 9,
        "title": "Garbage Collection Time",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum[5m])",
            "legendFormat": "{{application}} - {{action}}"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "GC Time" },
          { "format": "short" }
        ]
      },
      {
        "id": 10,
        "title": "Top 10 Slowest Endpoints",
        "type": "table",
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri, method)))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": {
                "uri": 0,
                "method": 1,
                "Value": 2
              },
              "renameByName": {
                "uri": "Endpoint",
                "method": "Method",
                "Value": "95th Percentile (s)"
              }
            }
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": { "from": "now-1h", "to": "now" },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "application",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up, application)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname,severity"
        }
      ]
    }
  }
}